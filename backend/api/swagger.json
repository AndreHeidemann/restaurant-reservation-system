{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Reserva e Menu do Restaurante",
    "version": "1.0.0",
    "description": "API para consulta de card치pio e reserva de mesas"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/menu": {
      "get": {
        "summary": "Retorna o card치pio do restaurante",
        "tags": [
          "Menu"
        ],
        "responses": {
          "200": {
            "description": "Lista de itens do card치pio",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "category": {
                        "type": "string",
                        "example": "Entradas"
                      },
                      "items": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string",
                              "example": "Bruschetta"
                            },
                            "description": {
                              "type": "string",
                              "example": "Grilled bread with tomatoes, olive oil, and herbs"
                            },
                            "price": {
                              "type": "number",
                              "example": 8
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/reservations": {
      "post": {
        "summary": "Cria uma nova reserva de mesa",
        "tags": [
          "Reservations"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "people",
                  "dateTime"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "people": {
                    "type": "integer",
                    "example": 4
                  },
                  "dateTime": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2023-10-15T19:30:00Z"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Reserva criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Reservation successful!"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inv치lidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "All fields are required."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {},
  "tags": []
}